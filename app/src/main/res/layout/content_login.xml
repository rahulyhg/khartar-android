<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@mipmap/splash"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/login_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_text"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"


                />





            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp"
                android:drawablePadding="20dp"
                android:background="@drawable/login_editextboader"
                android:drawableLeft="@mipmap/user"
                android:textColor="@color/colorAccent"
                android:singleLine="true"

                android:textColorHint="#ffffff"
                android:layout_marginTop="20dp"

                android:hint="Email / Mobile Number"/>
            <EditText
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawablePadding="20dp"
                android:background="@drawable/login_editextboader"
                android:textColor="@color/colorAccent"
                android:singleLine="true"
                android:inputType="textPassword"


                android:textColorHint="#ffffff"
                android:drawableLeft="@mipmap/password"
                android:layout_marginTop="30dp"
                android:hint="Password"/>
            <TextView
                android:id="@+id/forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Forgot your Password?"

                android:textColor="#ffffff"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="Sign in "
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:background="@drawable/signup_btnboader" />

            <LinearLayout
                android:id="@+id/lay_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_up"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/signup"
                    android:text="Sign up"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
