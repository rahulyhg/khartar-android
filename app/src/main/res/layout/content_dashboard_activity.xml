<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/splash"
    tools:context="com.vardhamaninfo.khartargaccha.Dashboard_activity"
    tools:showIn="@layout/activity_dashboard_activity">
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <ImageView
            android:padding="15dp"
            android:layout_width="150sp"
            android:id="@+id/sadhu"
            android:src="@mipmap/sadhu"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:id="@+id/panchang"
            android:src="@mipmap/pachg"

            android:layout_height="wrap_content" />

        <ImageView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:id="@+id/dadawadi"
            android:src="@mipmap/map"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Sadhu Sadhvi"
                android:layout_marginRight="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Panchang"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Dadawadi"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/tirth"
            android:src="@mipmap/nav_tirth"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/stavan"
            android:src="@mipmap/nav_stavan"

            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/pachakhan"
            android:src="@mipmap/pachakhan"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
